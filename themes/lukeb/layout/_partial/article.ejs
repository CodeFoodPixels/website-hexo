<article class="content__article">
    <header class="content__header">
        <h1>
            <% if (index) { %>
                <a href="<%- url_for(post.path) %>"><%- post.title %></a>
            <% } else { %>
                <%- post.title %>
            <% } %>
        </h1>
        <div class="content__meta">
            <time datetime="<%= date_xml(post.date) %>"><%= date(post.date) %></time>
        </div>
    </header>
    <% if (index) { %>
        <% if (post.excerpt) { %>
            <%- post.excerpt %>
        <% } else { %>
            <%- post.content %>
        <% } %>
        <p>
            <a href="<%- url_for(post.path) %>">Read More</a>
        </p>
    <% } else { %>
        <%- post.content %>
    <% } %>
    <footer>
        <% if (post.tags && post.tags.length){ %>
            <%- list_tags(post.tags, {
            show_count: false,
            style: false,
            transform: (name) => {
                return `#${name}`;
            }
          }) %>
        <% } %>
    </footer>
</article>
